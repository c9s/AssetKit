#!/bin/bash
set -e
onion -d compile \
    --lib src \
    --lib vendor/corneltek/universal/src \
    --lib vendor/corneltek/universal-cache/src \
    --classloader \
    --bootstrap scripts/assetkit.embed.php \
    --executable \
    --output assetkit.phar
mv assetkit.phar assetkit
chmod +x assetkit
